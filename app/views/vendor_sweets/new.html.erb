<% if flash[:errors]%>
    <% flash[:errors].each do |e|%>
        <%style="color:red"%>
        <%=e%>
    <%end%>
<%end%>



<%=form_for @vendor_sweets do |f|%>
<%=f.collection_select :vendor_id, @vendors, :id, :name%>
<%=f.collection_select :sweet_id, @sweets, :id, :name%>
<%=f.label :price%>
<%=f.text_field :price%>
<%=f.submit "submit"%>
<%end%>